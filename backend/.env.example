# MongoDB Connection
MONGODB_URI=mongodb://localhost:27017/acsci-weather

# Server Configuration
PORT=5001

# VAPID Keys for Web Push Notifications
# Generate new keys with: node -e "const webpush = require('web-push'); const keys = webpush.generateVAPIDKeys(); console.log('VAPID_PUBLIC_KEY=' + keys.publicKey); console.log('VAPID_PRIVATE_KEY=' + keys.privateKey);"
VAPID_PUBLIC_KEY=your_vapid_public_key_here
VAPID_PRIVATE_KEY=your_vapid_private_key_here
VAPID_EMAIL=mailto:admin@angelescity-weather.com

# OpenWeather API
OPENWEATHER_API_KEY=your_openweather_api_key_here
